{
    "name": "kotlin-for-frc",
    "displayName": "Kotlin For FRC",
    "description": "Kotlin for FRC is an unofficial companion extension to the official WPILib extension which adds support for Kotlin",
    "version": "2020.0.0-alpha.0",
    "publisher": "Brenek",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/wpilib-with-kotlin_K-128x128.png",
    "activationEvents": [
        "workspaceContains:.wpilib/wpilib_preferences.json",
        "onCommand:extension.createNew",
        "onCommand:extension.convertJavaProject",
        "onCommand:extension.forceCompliance",
        "onCommand:extension.changeComplianceTestPref",
        "onCommand:extension.toggleChangelog",
        "onCommand:extension.showChangelog",
        "onCommand:extension.resetAutoShowChangelog"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.convertJavaProject",
                "title": "Kotlin-FRC: Convert Java Project to Kotlin"
            },
            {
                "command": "extension.createNew",
                "title": "Kotlin-FRC: Create new class/command here"
            },
            {
                "command": "extension.forceCompliance",
                "title": "Kotlin-FRC: Update GradleRio and check for Main.kt"
            },
            {
                "command": "extension.changeComplianceTestPref",
                "title": "Kotlin-FRC: Change GradleRio Checks"
            },
            {
                "command": "extension.showChangelog",
                "title": "Kotlin-FRC: Show Changelog"
            },
            {
                "command": "extension.toggleChangelog",
                "title": "Kotlin-FRC: Toggle Auto-Show Changelog"
            },
            {
                "command": "extension.resetAutoShowChangelog",
                "title": "Kotlin-FRC: Reset Auto-Show Changelog"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder && isWPILibProject",
                    "command": "extension.createNew",
                    "group": "frc-kotlin"
                }
            ],
            "commandPalette": [
                {
                    "command": "extension.convertJavaProject",
                    "when": "isWPILibProject"
                },
                {
                    "command": "extension.createNew",
                    "when": "isWPILibProject && !isWPILibProject"
                },
                {
                    "command": "extension.forceCompliance",
                    "when": "isWPILibProject"
                },
                {
                    "command": "extension.changeComplianceTestPref",
                    "when": "isWPILibProject"
                },
                {
                    "command": "extension.showChangelog"
                },
                {
                    "command": "extension.toggleChangelog"
                },
                {
                    "command": "extension.resetAutoShowChangelog"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "test-compile": "tsc -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run test-compile && node ./node_modules/vscode/bin/test && run-script-os",
        "test:win32": "echo Resetting testing workspace && reset-testing-workspace.bat",
        "test:linux:darwin": "chmod +x reset-testing-workspace.sh && echo Resetting testing workspace && ./reset-testing-workspace.sh"
    },
    "devDependencies": {
        "@types/cross-spawn": "^6.0.0",
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "cross-spawn": "^6.0.5",
        "run-script-os": "^1.0.5",
        "ts-loader": "^5.3.3",
        "tslint": "^5.8.0",
        "typescript": "^2.9.2",
        "vscode": "^1.1.33",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.3.0"
    },
    "dependencies": {
        "@types/rimraf": "^2.0.2",
        "@types/semver": "^6.0.1",
        "rimraf": "^2.0.2",
        "semver": "^6.1.2"
    },
    "extensionDependencies": [
        "wpilibsuite.vscode-wpilib"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/zPaw/kotlin-for-frc.git"
    },
    "license": "MIT"
}
