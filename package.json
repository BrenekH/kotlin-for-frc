{
    "name": "kotlin-for-frc",
    "displayName": "Kotlin for FRC",
    "description": "Kotlin for FRC is an unofficial companion extension to the official WPILib extension which adds support for Kotlin",
    "version": "2021.1.1-beta.2",
    "publisher": "Brenek",
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "images/wpilib-with-kotlin_K-128x128.png",
    "activationEvents": [
        "workspaceContains:.wpilib/wpilib_preferences.json",
        "onCommand:kotlinForFRC.createNew",
        "onCommand:kotlinForFRC.convertJavaProject",
        "onCommand:kotlinForFRC.showChangelog",
        "onCommand:kotlinForFRC.resetAutoShowChangelog",
        "onCommand:kotlinForFRC.updateGradleRIOVersion",
        "onCommand:kotlinForFRC.resetGradleRIOCache",
        "onCommand:kotlinForFRC.simulateFRCKotlinCode"
    ],
    "main": "./dist/extension",
    "contributes": {
        "configuration": {
            "title": "Kotlin for FRC",
            "properties": {
                "kotlinForFRC.gradleRioVersion.autoUpdate": {
                    "type": "boolean",
                    "default": true,
                    "scope": "window",
                    "description": "Whether or not to automatically update the Gradle RIO Version when the Kotlin for FRC extension is loaded."
                },
                "kotlinForFRC.changelog.showOnUpdate": {
                    "type": "boolean",
                    "default": true,
                    "scope": "application",
                    "description": "Whether or not to show the changelog when Kotlin for FRC has been updated"
                }
            }
        },
        "commands": [
            {
                "command": "kotlinForFRC.convertJavaProject",
                "title": "Kotlin-FRC: Convert Java Project to Kotlin"
            },
            {
                "command": "kotlinForFRC.createNew",
                "title": "Kotlin-FRC: Create new class/command here"
            },
            {
                "command": "kotlinForFRC.showChangelog",
                "title": "Kotlin-FRC: Show Changelog"
            },
            {
                "command": "kotlinForFRC.resetAutoShowChangelog",
                "title": "Kotlin-FRC: Reset Auto-Show Changelog Cache"
            },
            {
                "command": "kotlinForFRC.updateGradleRIOVersion",
                "title": "Kotlin-FRC: Update GradleRIO Version"
            },
            {
                "command": "kotlinForFRC.resetGradleRIOCache",
                "title": "Kotlin-FRC: Reset GradleRIO Version Cache"
            },
            {
                "command": "kotlinForFRC.simulateFRCKotlinCode",
                "title": "Kotlin-FRC: Simulate FRC Kotlin Code"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "explorerResourceIsFolder && isWPILibProject",
                    "command": "kotlinForFRC.createNew",
                    "group": "frc-kotlin"
                }
            ],
            "commandPalette": [
                {
                    "command": "kotlinForFRC.convertJavaProject",
                    "when": "isWPILibProject"
                },
                {
                    "command": "kotlinForFRC.createNew",
                    "when": "isWPILibProject && !isWPILibProject"
                },
                {
                    "command": "kotlinForFRC.showChangelog"
                },
                {
                    "command": "kotlinForFRC.resetAutoShowChangelog",
                    "when": "isWPILibProject"
                },
                {
                    "command": "kotlinForFRC.updateGradleRIOVersion",
                    "when": "isWPILibProject"
                },
                {
                    "command": "kotlinForFRC.simulateFRCKotlinCode",
                    "when": "isWPILibProject"
                },
                {
                    "command": "kotlinForFRC.resetGradleRIOCache"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "compile": "webpack --mode none",
        "watch": "webpack --mode none --watch",
        "test-compile": "tsc -p ./",
        "lint": "eslint src --ext ts",
        "pretest": "npm run test-compile && npm run lint",
        "test": "npm run test-compile && node ./out/test/runTest.js && run-script-os",
        "test:win32": "echo Resetting testing workspace && reset-testing-workspace.bat",
        "test:linux:darwin": "chmod +x reset-testing-workspace.sh && echo Resetting testing workspace && ./reset-testing-workspace.sh"
    },
    "devDependencies": {
        "@types/cross-spawn": "^6.0.1",
        "@types/glob": "^7.1.1",
        "@types/mocha": "^7.0.2",
        "@types/node": "^13.11.0",
        "@types/vscode": "^1.37.0",
        "@typescript-eslint/eslint-plugin": "^2.26.0",
        "@typescript-eslint/parser": "^2.26.0",
        "cross-spawn": "^7.0.2",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.1",
        "run-script-os": "^1.1.1",
        "ts-loader": "^6.2.2",
        "typescript": "^3.8.3",
        "vscode-test": "^1.3.0",
        "webpack": "^4.42.1",
        "webpack-cli": "^3.3.11"
    },
    "dependencies": {
        "@types/rimraf": "^3.0.0",
        "@types/semver": "^7.1.0",
        "axios": "^0.19.0",
        "rimraf": "^3.0.2",
        "semver": "^7.2.2"
    },
    "extensionDependencies": [
        "wpilibsuite.vscode-wpilib"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/zPaw/kotlin-for-frc.git"
    },
    "license": "MIT"
}
